<Window x:Class="Greed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greed"
        mc:Ignorable="d"
        Title="Greed Mod Loader" Height="780" Width="1243" Icon="/icon.png" Background="#FFEDEDED" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="402*"/>
            <ColumnDefinition Width="409*"/>
            <ColumnDefinition Width="432*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="viewModList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="11,33,11,10" SelectionChanged="ModList_SelectionChanged" MouseDoubleClick="Toggle_Click">
            <ListView.View>
                <GridView x:Name="grdView">
                    <GridViewColumn Header="" Width="20" DisplayMemberBinding="{Binding Active}" />
                    <GridViewColumn Header="Mod Name" Width="170" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Version" Width="60" DisplayMemberBinding="{Binding Version}" />
                    <GridViewColumn Header="Greed" Width="60" DisplayMemberBinding="{Binding GreedVersion}" />
                    <GridViewColumn Header="Sins" Width="60" DisplayMemberBinding="{Binding SinsVersion}" />
                </GridView>
            </ListView.View>
        </ListView>
        <GroupBox x:Name="gbxSummary" Header="Selected Mod Info" Margin="10,19,9,61" Grid.Column="1">
            <RichTextBox x:Name="txtInfo" AutomationProperties.HelpText="Select a mod to see its details." IsReadOnly="True" Margin="2,0,-2,0">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </GroupBox>
        <Button x:Name="cmdToggle" Content="Toggle" Margin="10,0,0,35" VerticalAlignment="Bottom" Click="Toggle_Click" IsEnabled="False" HorizontalAlignment="Left" Width="62" Height="20" Grid.Column="1" ToolTip="Toggle whether a mod is active or not."/>
        <Label Content="Top mods inserted first. Bottom mods overwrite." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="265"/>
        <Button x:Name="cmdExport" Content="Export Greedy Selections" Click="Export_Click" Margin="10,0,10,10" Grid.Column="1" Height="20" VerticalAlignment="Bottom" ToolTip="Imports the active mods and exports them to mods/greed and turns greed on."/>
        <ListView x:Name="viewFileList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,33,10,61" MouseDoubleClick="Diff_Click" Grid.Column="2" SelectionChanged="FileList_SelectionChanged">
            <ListView.View>
                <GridView x:Name="grdView1">
                    <GridViewColumn Header="" Width="20" DisplayMemberBinding="{Binding DeltaSymbol}" />
                    <GridViewColumn Header="Folder" Width="90" DisplayMemberBinding="{Binding Folder}" />
                    <GridViewColumn Header="File Name" Width="290" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="cmdDiff" Content="View Difference Report" Margin="10,0,0,35" VerticalAlignment="Bottom" Click="Diff_Click" IsEnabled="False" HorizontalAlignment="Left" Width="133" Height="20" Grid.Column="2" ToolTip="Display a difference report between the gold copy and the execution product."/>
        <Label Content="Selected Mod Files" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="265" Grid.Column="2"/>

    </Grid>
</Window>
