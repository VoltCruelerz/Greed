<Window x:Class="Greed.Controls.Popups.CriticalAlertPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greed"
        mc:Ignorable="d"
        Title="CRITICAL ERROR" Height="360" Width="665" Icon="../../icon.png" Background="#FFBD924C" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <TextBox Name="TxtCriticalError" TextWrapping="Wrap" Text="" Margin="0,0,0,30" Background="#FFDCBF82" IsReadOnly="True"/>
        <Button Name="CmdIgnoreError" Content="Okay" Margin="10,0,0,5" Click="CmdIgnoreError_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="180"/>
        <Button Name="CmdReportError" Content="Report a Bug" Margin="0,0,10,5" Click="CmdReportError_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180" ToolTip="Submit an automatic bug report to the Greed GitHub repo."/>
    </Grid>
</Window>
